# Environment Variables for Voice Phishing Detection System
# Copy this file to .env and fill in your values

# === Application ===
APP_NAME="AI Voice Phishing Detection System"
DEBUG=false
ENVIRONMENT=development

# === API Server ===
API_HOST=0.0.0.0
API_PORT=8000

# === OpenAI API ===
OPENAI_API_KEY=your-openai-api-key-here

# === LLM Settings ===
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.1

# === Detection Model ===
DETECTION_MODEL_TYPE=aasist

# === Langfuse Monitoring ===
LANGFUSE_ENABLED=true
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com

# === MLflow ===
MLFLOW_ENABLED=true
MLFLOW_TRACKING_URI=mlruns
MLFLOW_EXPERIMENT_NAME=voice-phishing-detection

# === Security ===
ENABLE_PROMPT_INJECTION_DETECTION=true
ENABLE_PII_FILTERING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# === Streamlit ===
STREAMLIT_PORT=8501

# === LangSmith ===
LANGSMITH_TRACING=true
LANGSMITH_API_KEY=your-langsmith-secret-key
LANGSMITH_PROJECT="voicephishing"